<head>
  @{
      ViewData["Title"] = "Sign In Page";
  }
  <style>
    label{
      display:inline-block;
      margin-right:5px;
      text-align:right;
      width:80px;
    }

    fieldset{
      border:none;
      margin:0px auto;
      width:500px;
    }

    form {
      margin-left: 500px;
      margin-top: 30px;
      width: auto;
    }

    @* .signin_container {
      margin-left: 500px;
      margin-top: 30px;
    } *@

    .signin_title {
      color: #004010;
      font-size: 20px;
      margin-bottom: 40px;
    }

    #message {
      margin-top: 30px;
      text-align: center;
    }


    #slogan {
      color: forestgreen;
      border-bottom: 0.2px groove;
      font-style: italic;
      margin-top: 0;
      padding-top: 20px;
      padding-bottom: 34px;
    }

    #submit {
      background-color: white;
      border: 1px solid;
      border-radius: 8px;
      color: forestgreen;
      margin-left: 10px;
      padding: 5px 20px;
      text-decoration: none;
      transition: all 200ms ease-in-out;       
    }

    #submit:hover {
      background-color: #7cba00;
      color: white;
      cursor: pointer;
    }

     #signup {
      background-color: white;
      border: 1px solid;
      border-radius: 8px;
      color: forestgreen;
      margin-left: 10px;
      padding: 5px 20px;
      text-decoration: none;
      transition: all 200ms ease-in-out;       
    }

    #signup:hover {
      background-color: #7cba00;
      color: white;
      cursor: pointer;
    }

    .no_account {
      margin-top: 50px;
    }

  </style>

</head>

<body> 
  <div class="text-center">
    <h1 id="slogan">Where good neighbours become good friends</h1>
  </div>

  <div class="signin_container"> 
    <form action="/signin" method="post">
    <h5 class="signin_title">Sign In</h5>
      <label>Email</label>
      <input type='email' id='email' name='email' placeholder='Email' required/><br><br>
      <label>Password</label>
      <input type='password' id='password' name='password' placeholder='Password' required/><br><br>
      <input type='submit' id='submit' value='Sign In'/>
    </form>
    <p class="no_account">Don't have an account yet? <a  href="/signup" id="signup" >Sign Up</a></p>

    <br>
      <h6 id="message" style="color:red">@ViewBag.ErrorMessage</h6>
      <h6 id="message" style="color:green">@ViewBag.SuccessMessage</h6>
    <br>
  </div>
</body>
